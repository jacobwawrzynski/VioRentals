@using VioRentals.Core.DTOs
@model MovieDto

<div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="max-w-xl mx-auto">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800 sm:text-4xl dark:text-white">
                Create a new movie
            </h1>
            <p class="mt-1 text-gray-600 dark:text-gray-400">
                Just do it :)
            </p>
        </div>
    </div>

    <div class="mt-12 max-w-lg mx-auto">
        <!-- Card -->
        <div class="flex flex-col border rounded-xl p-4 sm:p-6 lg:p-8 dark:border-gray-700">
            <h2 class="mb-8 text-xl font-semibold text-gray-800 dark:text-gray-200">
                Fill in the form
            </h2>

            @using (Html.BeginForm("Create", "Movies"))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-xs text-red-600 mt-2" })

                <div class="grid gap-4 lg:gap-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "block text-sm text-gray-700 font-medium dark:text-white" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-xs text-red-600 mt-2" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.NumberInStock, new { @class = "block text-sm text-gray-700 font-medium dark:text-white" })
                        @Html.TextBoxFor(m => m.NumberInStock, new { @class = "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400" })
                        @Html.ValidationMessageFor(m => m.NumberInStock, "", new { @class = "text-xs text-red-600 mt-2" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.GenreFK, new { @class = "block text-sm text-gray-700 font-medium dark:text-white" })
                        @Html.TextBoxFor(m => m.GenreFK, new { @class = "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400" })
                        @Html.ValidationMessageFor(m => m.GenreFK, "", new { @class = "text-xs text-red-600 mt-2" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ReleaseDate, new { @class = "block text-sm text-gray-700 font-medium dark:text-white" })
                        @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "py-3 px-4 block w-full border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-slate-900 dark:border-gray-700 dark:text-gray-400" })
                        @Html.ValidationMessageFor(m => m.ReleaseDate, "", new { @class = "text-xs text-red-600 mt-2" })
                    </div>

                    <div class="mt-6 grid">
                        <button type="submit" class="inline-flex justify-center items-center gap-x-3 text-center bg-blue-600 hover:bg-blue-700 border border-transparent text-sm lg:text-base text-white font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-offset-2 focus:ring-offset-white transition py-3 px-4 dark:focus:ring-offset-gray-800">Create</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
