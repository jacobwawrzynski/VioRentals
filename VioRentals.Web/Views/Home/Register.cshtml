@model VioRentals.Web.DTOs.RegisterDto

@using (Html.BeginForm("Register", "Authenticate", FormMethod.Post))
{
    <main class="w-full max-w-md mx-auto p-6">
    <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="p-4 sm:p-7">
            <div class="text-center">
                <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Sign up</h1>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                    Already have an account?
                        <a class="text-blue-600 decoration-2 hover:underline font-medium" asp-controller="Home" asp-action="Login">
                        Sign in here
                    </a>
                </p>
            </div>

            <div class="mt-5">
                <!-- Form -->
                <form>
                    <div class="grid gap-y-4">
                        <!-- Form Group -->
                        <div>
                            @Html.TextBoxFor(model => model.Forename, new { @class = "block w-full p-3 rounded bg-gray-100 border border-transparent dark:bg-gray-800 dark:text-gray-300 focus:outline-none focus:border-gray-400 focus:bg-white dark:focus:bg-gray-700 dark:focus:border-gray-600", @placeholder = "Forename" })
                            <p class="hidden text-xs text-red-600 mt-2" id="email-error">Please include a valid email address so we can get back to you</p>
                        </div>
                        <!-- End Form Group -->
                        <!-- Form Group -->
                        <div>
                            @Html.TextBoxFor(model => model.Lastname, new { @class = "block w-full p-3 rounded bg-gray-100 border border-transparent dark:bg-gray-800 dark:text-gray-300 focus:outline-none focus:border-gray-400 focus:bg-white dark:focus:bg-gray-700 dark:focus:border-gray-600", @placeholder = "Lastname" })
                            <p class="hidden text-xs text-red-600 mt-2" id="email-error">Please include a valid email address so we can get back to you</p>
                        </div>
                        <!-- End Form Group -->
                        <!-- Form Group -->
                        <div>
                            @Html.TextBoxFor(model => model.Email, new { @class = "block w-full p-3 rounded bg-gray-100 border border-transparent dark:bg-gray-800 dark:text-gray-300 focus:outline-none focus:border-gray-400 focus:bg-white dark:focus:bg-gray-700 dark:focus:border-gray-600", @placeholder = "Email" })
                            <p class="hidden text-xs text-red-600 mt-2" id="email-error">Please include a valid email address so we can get back to you</p>
                        </div>
                        <!-- End Form Group -->
                        <!-- Form Group -->
                        <div>
                            @Html.TextBoxFor(model => model.Password, new { @class = "block w-full p-3 rounded bg-gray-100 border border-transparent dark:bg-gray-800 dark:text-gray-300 focus:outline-none focus:border-gray-400 focus:bg-white dark:focus:bg-gray-700 dark:focus:border-gray-600", @placeholder = "Password" })
                            <p class="hidden text-xs text-red-600 mt-2" id="password-error">8+ characters required</p>
                        </div>
                        <!-- End Form Group -->

                        <button type="submit" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800" value="Register">Sign up</button>
                    </div>
                </form>
                <!-- End Form -->
            </div>
        </div>
    </div>
</main>
}