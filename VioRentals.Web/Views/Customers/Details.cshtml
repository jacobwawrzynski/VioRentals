@model Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<h3>Membership Type: @Html.DisplayFor(model => model.MembershipType.Name)</h3>
